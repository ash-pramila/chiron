FROM tiangolo/uvicorn-gunicorn-fastapi:python3.7
SHELL ["/bin/bash", "-c"]

ENV RASA_NLU_DOCKER="YES" \
    RASA_NLU_HOME=/app \
    RASA_NLU_PYTHON_PACKAGES=/usr/local/lib/python3.7/dist-packages

WORKDIR ${RASA_NLU_HOME}

RUN python3 -m pip install --upgrade pip
RUN python3 -m pip install sentence_transformers
RUN python3 -m pip install spacy
RUN python3 -m spacy download en_core_web_sm
RUN python3 -m pip install gensim
RUN python3 -m gensim.downloader --download word2vec-google-news-300

COPY augmentation ${RASA_NLU_HOME}/augmentation

EXPOSE 8000

CMD ["uvicorn", "augmentation.server:app","--host","0.0.0.0","--log-level","debug"]